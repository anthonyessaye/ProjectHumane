<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.themodernbit.projecthumane.TagsActivities.ChosenTranslationActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtViewOriginalLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="English Word:"
            android:textSize="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#000"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtViewTranslatedLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translated Word:"
            android:textSize="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textColor="#000"
            android:gravity="center"/>


    </LinearLayout>

</LinearLayout>
